          },
          "host" : {
            "type" : "string",
            "index" : "not_analyzed"
          },
          "ident" : {
            "type" : "string",
            "index" : "not_analyzed"
          },
          "level" : {
            "type" : "string"
          },
          "message" : {
            "type" : "string",
            "index" : "not_analyzed"
          },
          "pid" : {
            "type" : "string"
          },
          "timestamp" : {
            "type" : "string"
          }
        }
      } 
    },
    "template": "paas-syslog"
  }
